        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="myreferences">
                <span class="oi oi-people" aria-hidden="true"></span> My References
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="https://github.com/drosskopfchurch/Resume">
                <span class="oi oi-arrow-circle-bottom" aria-hidden="true"></span> This App
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="https://www.linkedin.com/in/david-rosskopf-9176721b/">
                <span class="oi oi-link-intact" aria-hidden="true"></span> My LinkedIn
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
